{
    "simulation": {
        "name": "BGP_Security_Blockchain_Simulation",
        "version": "1.0.0",
        "description": "18-node BGP attack detection with blockchain consensus",
        "total_nodes": 18,
        "simulation_duration": 3600,
        "logging_level": "INFO"
    },
    
    "network": {
        "rpki_nodes": [1, 3, 5, 7, 9, 11, 13, 15, 17],
        "non_rpki_nodes": [2, 4, 6, 8, 10, 12, 14, 16, 18],
        "consensus_threshold": 0.67,
        "min_consensus_votes": 6
    },
    
    "blockchain": {
        "block_time": 60,
        "max_transactions_per_block": 100,
        "signature_algorithm": "RSA",
        "hash_algorithm": "SHA256"
    },
    
    "attack_detection": {
        "enabled_detectors": [
            "prefix_hijacking",
            "subprefix_hijacking", 
            "route_leak"
        ],
        "validation_modules": [
            "rpki_validator",
            "irr_validator"
        ],
        "confidence_threshold": 0.8
    }
}
