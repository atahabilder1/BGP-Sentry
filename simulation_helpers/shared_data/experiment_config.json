{
    "experiment_metadata": {
        "name": "BGP-Sentry Blockchain Simulation",
        "description": "Distributed blockchain simulation for BGP security testing",
        "version": "1.0"
    },
    "simulation_parameters": {
        "time_scale": 1.0,
        "max_duration": 50,
        "expected_nodes": 9,
        "processing_interval": 5.0,
        "convergence_timeout": 30,
        "node_startup_delay": 2
    },
    "monitoring": {
        "health_check_interval": 5,
        "enable_dashboard": true,
        "alert_on_failures": true,
        "performance_monitoring": true
    },
    "paths": {
        "bgp_data_path": "bgp_feed/mininet_logs/",
        "results_dir": "results",
        "logs_dir": "logs"
    },
    "blockchain_settings": {
        "consensus_timeout": 10,
        "block_time": 30,
        "max_transactions_per_block": 100
    },
    "network_settings": {
        "rpki_validation": true,
        "attack_detection": true,
        "trust_scoring": true
    }
}
